<h1>Restaurant Name</h1>

<%= link_to "Create Menu Item", new_menu_item_path %>

<% if @menu_items.blank? %>
  <p>There are no menu items, please click <%= link_to "Create Menu Item", new_menu_item_path %> to create a new menu item </p>
<% else %> 
  <div class="menu_category">
    <h2>Appetizers</h2>
    <% @menu_items.each do |menu_item| %>
      <% if menu_item.category == "Appetizer" %>
        <%= link_to menu_item.name, menu_item_path(menu_item) %><br>
        <%= menu_item.description %><br>
        <%= menu_item.price %>
      <% end %>
    <% end %>
  </div>

