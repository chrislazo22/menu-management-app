<h1>Add New Menu Item</h1>

<%= form_for @menu_item do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :category %>
  <%= f.text_field :category %>

  <%= f.label :price %>
  <%= f.text_field :price %>

  <%= f.submit "Submit" %>
<% end %>

<%= link_to "Back", root_path %>
