<div class="row">
  <div class="col s10 offset-s1">
    <div class="card">
      <div class="card-content center-align">
        <%= form_for @menu_item, html: { multipart: true } do |f| %>
          <span class="card-title">Name</span>
          <%= f.text_field :name %><br>

          <span class="card-title">Description</span>
          <%= f.text_area :description %><br>

          <span class="card-title">Category</span>
          <%= f.select :category, options_for_select(['Appetizer', 'Main Course', 'Side Dish', 'Dessert']), { prompt: "Choose a category" }, class: "browser-default" %><br>

          <span class="card-title">Price</span>
          <%= f.text_field :price %><br>

          <span class="card-title">Image</span>
          <%= f.file_field :image %><br>

          <br><%= f.submit "Submit", class: "waves-effect btn" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
