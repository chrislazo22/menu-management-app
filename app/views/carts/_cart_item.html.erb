<% if !@order_item.nil? && @order_item.errors %>
  <ul>
    <% @order_item.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<% if @order_items.size == 0 %>
  <h5 class="center-align">No Items in Cart</h5>

<% elsif @order_items.size > 0 %>
<table class="bordered highlight">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Item Total</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
  <% @order_items.each do |item| %>
    <tr>
      <td><%= item.menu_item.name %></td>
      <%= form_for(item, remote: true) do |f| %>
        <%= f.hidden_field :menu_item_id, value: item.menu_item.id %>
        <td><%= item.menu_item.price %></td>
        <td><%= f.text_field :quantity, value: item.quantity, min: 1 %></td>
        <td><p>Price: <%= item.total_price %></p></td>
        <td><%= f.submit "Update Cart" %>
        <%= link_to "Delete", item, method: :delete, remote: true %></td>
        <% end %>
    </tr>
    <% end %>
  </tbody>
</table><br>
<strong class="left-align"><%= "Total Price: #{current_order.subtotal}" %></strong>
<% end %>
