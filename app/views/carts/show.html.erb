<% !@order_item.nil? && @order_item.errors.any? %>
  <ul>
    <% @order_items.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>

  <% if order_items.size > 0 %>
    <% @order_items.each do |item| %>
      <%= item.menu_item.name %>
      <%= form_for(item, remote: true) do |f| %>
        <%= f.hidden_field :menu_item_id, value: item.menu_item.id %>
        <%= menu_item.price %>
        <%= f.text_field :quantity, value: item.quantity, min: 1 %>
        <%= f.submit "Update Cart" %>
        <%= link_to "Delete", item, method: :delete, remote: true %>
        <p>Total Price: <%= item.total_price %></p>
      <% end %>
    <% end %>
<% end %>
